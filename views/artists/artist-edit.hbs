<h2>Edit the artist: {{artist.name}}</h2>

<form action="/artists/{{artist._id}}/edit" method="post">
<label>Name:
    <input type="text" name="title" value="{{artist.name}}"/>
    </label>
<label>Genre:
    <input type="text" name="genres" value="{{artist.genres}}"/>
</label>
<label>Description:
    <textarea name="description" cols="30" rows="4">
        {{artist.description}}
    </textarea>
</label>
<label>Image:
    <input type="text" name="images" value="{{artist.images}}"/>
</label>
    <button type="submit" class="btn btn-primary">Save Changes</button>
</form> 